<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

     >

    <FrameLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent">
    
	    <ListView
	        android:id="@+id/dictionaryListView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" 
	        
	        >
	    </ListView>

        <LinearLayout
            android:layout_gravity="center_vertical|bottom|end"
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingButton"
                app:srcCompat="@drawable/add_button_symbol"
                android:id="@+id/addShortcutButton"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingButton"
                app:srcCompat="@drawable/menu_icon"
                android:id="@+id/dictionaryPanelMenuButton"
                />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/FloatingButton"
                app:srcCompat="@drawable/ic_keyboardbutton"
                android:id="@+id/testkeyboardbutton"
                />



        </LinearLayout>


	</FrameLayout>

</LinearLayout>
