<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    style="@style/ContainerPadding"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/hotkey_hard_modifier_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >

                        <Button
                            style="@style/ModButton"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/hotkeys_hardware_key_undefined"
                            android:id="@+id/hotkey_hard_modifier_button"
                            android:alpha="1"
                            />

                        <Button
                            style="@style/ModButton"
                            android:text="@string/hotkeys_hardware_key_remove_modifier"
                            android:id="@+id/hotkey_hard_remove_modifier_button"
                            android:alpha="1"
                            />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" + "
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" "
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <Button
                    style="@style/ModButton"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/hotkeys_hardware_key_undefined"
                    android:id="@+id/hotkey_hard_key_button"
                    android:alpha="1"
                    />

                <Button
                    style="@style/ModButton"
                    android:text="@string/hotkeys_hardware_add_modifier"
                    android:id="@+id/hotkey_hard_add_modifier_button"
                    android:alpha="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <Spinner
        android:id="@+id/shortcutkey_action_picker"
        android:paddingTop="@dimen/vertical_item_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select all"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />

</LinearLayout>
