<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?android:attr/colorBackground"
    >

    <FrameLayout
        android:id="@+id/quick_menu_config_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment android:name="com.mayulive.swiftkeyexi.main.swipe.quickmenu.QuickMenuConfigFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />


    </FrameLayout>



    <FrameLayout
        android:visibility="gone"
        android:id="@+id/test_keyboard_container"
        android:background="?android:attr/colorBackground"
        android:alpha="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mayulive.swiftkeyexi.util.view.BackCallbackEditText
            android:layout_gravity="bottom"
            android:id="@+id/test_keyboard"
            android:layout_width="match_parent"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:layout_height="wrap_content"/>


    </FrameLayout>

</FrameLayout>