<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="draggableCardColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="dialogStyle" format="reference" />

    <declare-styleable name="BoundedView">
        <attr name="bounded_width" format="dimension" />
        <attr name="bounded_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="NumberPickerPreference">
        <attr name="max" format="integer" />
        <attr name="min" format="integer" />
        <attr name="appDefaultValue" format="integer" />
    </declare-styleable>

    <!-- can't use attriute with the same name because it's already used ? THEY'RE IN DIFFERENT NAMEPSACES -->
    <declare-styleable name="FloatNumberPickerPreference">
        <attr name="maxFloat" format="float" />
        <attr name="minFloat" format="float" />
        <attr name="appDefaultValueFloat" format="float" />
    </declare-styleable>

    <declare-styleable name="MultilineSummaryPreference">
        <attr name="top_summary" format="string" />
        <attr name="bottom_summary" format="string" />
    </declare-styleable>

    <declare-styleable name="UnitCharDisplayView">
        <attr name="comparison_bar_length" format="dimension" />
    </declare-styleable>




</resources>