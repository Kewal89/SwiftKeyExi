<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseThemeLight" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

       <!-- <item name="android:alertDialogStyle"> @style/mydialogtheme </item> -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:popupBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!-- <item name="android:alertDialogStyle"> @style/mydialogtheme </item> -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:popupBackground">?attr/colorPrimaryDark</item>
    </style>



    <style name="WidthLimitedContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="bounded_width">600dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SectionSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/vertical_item_spacing</item>
    </style>


    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">I am a Section</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="SubSectionTitle" parent="SectionTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="FloatingButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <!-- item name="android:elevation">12dp</item -->
        <item name="fabSize">mini</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CenteredFloatingButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name ="android:layout_gravity">center_vertical|end</item>
        <!-- item name="android:elevation">12dp</item -->
        <item name="fabSize">mini</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ListTextItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dictionary_value_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="ListTextItemLarge" parent="ListTextItem">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="ContainerPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/vertical_item_spacing</item>
        <item name="android:paddingBottom">@dimen/vertical_item_spacing</item>
    </style>

    <style name="EditboxDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <!-- item name="android:paddingLeft">@dimen/dictionary_value_padding</item -->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="EditBoxInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditBoxInputSmall" parent="EditBoxInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minEms">5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="DisplayButton">
        <item name="android:layout_width">@dimen/display_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">0dp</item>
    </style>


    <style name="ModButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/modifier_title</item>
        <item name="android:alpha">0.5</item>
        <item name="android:clickable">false</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
    </style>


</resources>
